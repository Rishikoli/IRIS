# API Keys for Real-Time Data Integration
FMP_API_KEY=demo
FMP_API_KEY_FALLBACK=
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY_FALLBACK=

# Feature Flags for Real-Time Data
USE_REAL_TRENDS=True
USE_REAL_SCRAPING=True
USE_REAL_FMP=True

# Database Configuration
DATABASE_URL=sqlite:///./iris_regtech.db

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Rate Limiting Configuration
FMP_RATE_LIMIT_PER_MINUTE=60
FMP_MONTHLY_LIMIT=10000
GEMINI_RATE_LIMIT_PER_MINUTE=60
GEMINI_MONTHLY_LIMIT=1000
TRENDS_RATE_LIMIT_PER_HOUR=100
SCRAPING_DELAY_SECONDS=1

# Data Quality and Freshness
DATA_QUALITY_THRESHOLD=70
CACHE_INVALIDATION_HOURS=24
FALLBACK_TO_CACHE_ON_ERROR=true

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL_MINUTES=5

# Search / Elasticsearch (optional)
ELASTICSEARCH_URL=
ELASTICSEARCH_INDICES=tips,advisors,documents

# Security and Environment
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1,*.localhost